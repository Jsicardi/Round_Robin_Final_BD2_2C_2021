                  "value_eur": 65500000,
                  "contract_until": 2023,
                  "national_team_id": 4,
                  "preferred_foot": "Left",
                  "pace_total": 80,
                  "shooting_total": 81,
                  "passing_total": 82,
                  "dribbling_total": 82,
                  "defending_total": 36,
                  "physicality_total": 66
                },
                {
                  "player_id": 183898,
                  "fullname": "Ángel Di María",
                  "age": 33,
                  "photo": "https://photo.png",
