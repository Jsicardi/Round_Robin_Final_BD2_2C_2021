                  "passing_total": 81,
                  "dribbling_total": 90,
                  "defending_total": 38,
                  "physicality_total": 60
                },
                {
                  "player_id": 200260,
                  "fullname": "Steven Berghuis",
                  "age": 29,
                  "photo": "https://photo.png",
                  "nationality": "Netherlands",
                  "total_score": 81,
                  "positions": "['RW']",
                  "bestPosition": "RW",
                  "team_id": 245,
                  "value_eur": 65500000,
                  "contract_until": 2023,
                  "national_team_id": 4,
                  "preferred_foot": "Left",
                  "pace_total": 80,
                  "shooting_total": 81,
                  "passing_total": 82,
                  "dribbling_total": 82,
                  "defending_total": 36,
                  "physicality_total": 66
                },
                {
                  "player_id": 183898,
                  "fullname": "Ángel Di María",
                  "age": 33,
                  "photo": "https://photo.png",
                  "nationality": "Argentina",
                  "total_score": 87,
                  "positions": "['RW', 'LW']",
                  "bestPosition": "RW",
                  "team_id": 73,
                  "value_eur": 65500000,
                  "contract_until": 2023,
                  "national_team_id": 1369,
                  "preferred_foot": "Left",
                  "pace_total": 83,
                  "shooting_total": 81,
                  "passing_total": 86,
                  "dribbling_total": 88,
                  "defending_total": 48,
                  "physicality_total": 69
                }
              ]
            }
          },
          "400": {
            "description": "Bad Request ( For example age < 0 )"
          }
        }
      }
    },
    "/players/similar": {
      "get": {
        "tags": [
          "players"
        ],
        "summary": "Finds players with the same playing style as the one passed",
        "description": "Return players that perform the closest to the one passed in FIFA's categories (Pace, dribbling, shooting, passing, defending, physicality) and plays in the same position",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Player name trying to find similar players for",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/PlayerFull"
              },
              "example": [
