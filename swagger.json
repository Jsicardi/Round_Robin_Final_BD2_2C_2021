    "/players/nationalityPartners": {
      "get": {
        "tags": [
          "players"
        ],
        "summary": "Finds recommendations for national teams",
        "description": "Return players that play or have played with players that are currently representing their national team",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "player",
            "in": "query",
            "description": "Player name that currently plays in national team to search for his partners",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Player1"
              },
              "example": [
                {
                  "name": "Erik Lamela"
                },
                {
                  "name": "Lucas Ocampos"
                },
                {
                  "name": "José Luis Palomino"
                }
              ]
            }
          },
          "400": {
            "description": "Missing player parameter"
          }
        }
      }
    },
    "/players/degrees": {
      "get": {
        "tags": [
          "players"
        ],
        "summary": "N degrees of player (Six degrees of Bacon)",
        "description": "Return players that are up to n jumps away from the player passed. (1 degree are players that played with player passed. 2 degrees are the 1 degree players and players 1 degree away from them. And so on.)",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "player",
            "in": "query",
            "description": "Player name to calculate degrees of",
            "required": true,
            "type": "string"
          },
          {
            "name": "degrees",
            "in": "query",
            "description": "Degrees requested",
            "required": true,
            "type": "integer",
            "minimum": 1,
            "maximum": 6
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Player1"
              },
              "example": [
                {
                  "name": "Sergio Ramos García"
                },
                {
                  "name": "Mauro Icardi"
                },
                {
                  "name": "Kylian Mbappé"
                }
              ]
            }
          },
          "400": {
            "description": "Missing player parameter - Missing degrees parameter - Invalid degrees value, should be an integer between 1 and 6"
          }
        }
      }
    },
    "/teams/recommended": {
      "get": {
        "tags": [
          "teams"
        ],
        "summary": "Finds recommended teams for a player to play in",
        "description": "Return teams where current player's partners have played in the past",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "player",
            "in": "query",
            "description": "Player name that is looking for team recommendations",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/TeamAndCount"
              },
              "example": [
                {
                  "club": "Real Madrid CF",
                  "timesMatched": 4
                },
                {
                  "club": "AS Monaco",
                  "timesMatched": 4
                },
                {
                  "club": "AC Milan",
                  "timesMatched": 3
                }
              ]
            }
          },
          "400": {
            "description": "Missing player parameter"
          }
        }
      }
    }
  },
  "definitions": {
    "Player1": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "Erik Lamela"
        }
      }
    },
    "PlayerFull": {
      "type": "object",
      "properties": {
        "player_id": {
          "type": "integer",
          "example": 204485
        },
        "fullname": {
          "type": "string",
          "example": "Riyad Mahrez"
        },
        "age": {
          "type": "integer",
          "example": 30
        },
        "photo": {
          "type": "string",
          "example": "https://photo.png"
        },
        "nationality": {
          "type": "string",
          "example": "Algeria"
        },
        "total_score": {
          "type": "integer",
          "example": 86
        },
        "positions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": [
            "RW",
            "RM"
          ]
        },
        "bestPosition": {
          "type": "string",
          "example": "RW"
        },
        "team_id": {
          "type": "integer",
          "example": 10
        },
        "value_eur": {
          "type": "integer",
          "example": 65500000
        },
        "contract_until": {
          "type": "integer",
          "example": 2023
        },
        "national_team_id": {
          "type": "integer",
          "example": 4
        },
        "preferred_foot": {
          "type": "string",
          "example": "Left"
        },
        "pace_total": {
          "type": "integer",
          "example": 81
        },
        "shooting_total": {
          "type": "integer",
          "example": 80
        },
        "passing_total": {
          "type": "integer",
          "example": 81
        },
        "dribbling_total": {
          "type": "integer",
          "example": 90
        },
        "defending_total": {
          "type": "integer",
          "example": 38
        },
        "physicality_total": {
          "type": "integer",
          "example": 60
        }
      }
    },
    "TeamAndCount": {
      "type": "object",
      "required": [
        "club",
        "timesMatched"
      ],
      "properties": {
        "club": {
          "type": "string",
          "example": "Real Madrid CF"
        },
        "timesMatched": {
          "type": "integer",
          "example": 4
        }
      }
    }
  }
}